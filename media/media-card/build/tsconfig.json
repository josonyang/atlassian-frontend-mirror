{
  "extends": "../tsconfig",
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "paths": {}
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": [
    "../src/**/__tests__/*",
    "../src/**/__tests_external__/*",
    "../src/**/*.test.*",
    "../src/**/test.*",
    "../src/**/examples.*",
    "../src/**/examples/*",
    "../src/**/examples/**/*",
    "../src/**/*.stories.*",
    "../src/**/stories/*",
    "../src/**/stories/**/*"
  ]
}
